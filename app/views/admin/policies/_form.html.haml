= form_with model: [:admin, @policy] do |f|
  = f.hidden_field :category

  .form-group
    = f.text_area :body, 'data-provider': :summernote

  .form-group
    = link_to '취소', admin_policies_path(category: @policy.category), class: 'btn btn-outline-secondary'
    = f.submit '저장', class: 'btn btn-primary'