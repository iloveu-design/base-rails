<form class="new_paid_guest" id="new_paid_guest" accept-charset="euc-kr" method="post" onsubmit="document.charset='euc-kr';">
  <input type="hidden" name="P_OID" value=<%= generate_unique_oid("") %>>
  <input type="hidden" name="P_MID" value="<%= ENV['INICIS_MID']%>">
  <input type="hidden" name="P_AMT" value="<%= @document_data["fee"]["0"]["amount"] %>">
  <input type="hidden" name="P_UNAME" value="<%= @paid_user["name"] %>">
  <input type="hidden" name="P_GOODS" value="<%= @document_form.name.gsub(/[^\p{Word}]/, '') %>">
  <input type="hidden" name="P_MOBILE" value="<%= @paid_user["phone"] %>">
  <input type="hidden" name="P_EMAIL" value="<%= @paid_user["email"] %>">

  <input type="hidden" name="P_HPP_METHOD" value="2">

  <input type=hidden name="P_NEXT_URL" value="//<%= "#{request.host}" %>/payment/result">
  <input type=hidden name="P_NOTI_URL" value="//<%= "#{request.host}" %>/payment/rnoti">

</form>
